# API Keys
GEMINI_API_KEY=your_gemini_api_key_here

# Database Configuration
# For SQLite (default)
DATABASE_URL=sqlite:////app/data/infrastructure.db

# For PostgreSQL (production)
# DATABASE_URL=postgresql://netquery:changeme@postgres:5432/infrastructure
# POSTGRES_DB=infrastructure
# POSTGRES_USER=netquery
# POSTGRES_PASSWORD=changeme
# POSTGRES_PORT=5432

# Redis Cache (optional)
# REDIS_URL=redis://redis:6379/0
# REDIS_PORT=6379

# Application Settings
LOG_LEVEL=INFO
API_PORT=5001
FLASK_DEBUG=false
HOST=0.0.0.0

# Performance Settings
MAX_RESULT_ROWS=1000
MAX_QUERY_LENGTH=10000
QUERY_TIMEOUT=30
CACHE_TTL=3600

# LLM Settings
LLM_MODEL=gemini-1.5-flash
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2048
LLM_MAX_RETRIES=3

# Safety Settings
ENABLE_SAFETY_CHECKS=true
MAX_JOINS=5
MAX_SUBQUERIES=3

# MCP Server Settings
MCP_SERVER_NAME=netquery-text-to-sql
MCP_SERVER_VERSION=1.0.0

# Development Settings (only for development profile)
# HOT_RELOAD=true
# DEBUG_SQL=true